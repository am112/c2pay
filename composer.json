{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "am112/c2pay",
    "type": "package",    
    "description": "A package to help integration with 2c2p payment gateway",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0",
        "firebase/php-jwt": "^7.0"
    },

    "autoload": {
        "psr-4": {
            "Am112\\C2pay\\": "src/",
            "Am112\\C2pay\\Database\\Factories\\": "database/factories/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Am112\\C2pay\\C2payProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "am112",
            "email": "muhammad.amiruddin.112@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true

}